                            android:layout_height="wrap_content"
                            android:text="Red"
                            />
                        <RadioButton
                            android:id="@+id/rb_green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Green"
                            />
                        <RadioButton
                            android:id="@+id/rb_blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Blue"
