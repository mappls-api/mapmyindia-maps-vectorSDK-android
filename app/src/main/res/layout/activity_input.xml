<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".java.activity.InputActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Origin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/origin_et"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Eloc/Lat,Lng"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Destination"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/destination_et"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Eloc/Lat,Lng"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Way points"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/waypoints_et"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Eloc/Lat,Lng;Eloc/Lat,Lng"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/set_btn"
        android:layout_width="wrap_content"
        android:text="set"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>